# Use strict-peer-dependencies=false to avoid peer dependency issues
strict-peer-dependencies=false

# Use node-linker=hoisted for better compatibility
node-linker=hoisted

# Enable legacy peer dependencies to avoid warnings
legacy-peer-deps=true

# Use this to avoid issues with optional dependencies
ignore-scripts=false

# Ensure public-hoist-pattern includes necessary packages
public-hoist-pattern[]=*types*
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=@next/swc-*
public-hoist-pattern[]=@swc/core
